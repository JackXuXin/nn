<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/message_item_notification_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ysf_message_notification_bg"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="2dp"
        android:textColor="@color/ysf_notification_text"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/message_item_evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="22dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:background="@color/ysf_gray_f3f3f3"
        android:paddingTop="22dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ysf_evaluation_message_item_text"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ysf_btn_message_item_evaluation"
            android:background="@drawable/ysf_evaluation_button_bg"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="22dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/ysf_evaluation_message_item_btn"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</merge>